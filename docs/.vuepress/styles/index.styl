$accentColor = #36b1bf
$borderColor = #eaecef
$codeBgColor = #282c34

.navbar .site-name {
  font-size: 32px;
}

.site-name:first-letter {
  color: #36b1bf;
}

.navbar {
  border: none;
  padding-left: 50px;
}

.home .hero {
  display: inline-block;
  position: absolute;
  top: 50%;
  left: 50px;
  transform: translateY(-50%);
  text-align: left;
}

#main-title:first-letter {
  color: #36b1bf;
  text-decoration: underline;
  font-style: italic;
}

.footer {
  position: absolute;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
}

.container {
  margin: 15px 0;
  border: 1px solid #eee;
}

.container .source {
  padding: 24px;
}

.container .source .row {
  margin-bottom: 20px;
}

.container .source .button-demo-1 .row:nth-child(2) {
  padding: 10px;
  background-color: rgb(190, 200, 200);
}

.container .source .row:last-child {
  margin-bottom: 0;
}

.container .source .icon-demo i {
  font-size: 24px;
  margin: 0 20px;
}

.theme-default-content:not(.custom) a:hover {
  text-decoration: none;
}

.container .source .input-demo-1 .o-input {
  width: 180px;
}

.container .source .input-demo-2 .o-input {
  width: 180px;
}
.container .source .input-demo-3 .o-input {
  width: 180px;
}

table {
  font-size: 14px;
}

td {
  white-space: nowrap;
}

.container .source .form-demo-1 .o-form {
  width: 460px;
}

.container .source .form-demo-1 .o-form .o-select .o-input {
  width: 380px;
}
.container .source .form-demo-1 .o-form .o-select .o-input__inner {
  width: 380px;
}

.container .source .form-demo-1 .o-select-dropdown__wrapper {
  width: 380px;
}

.container .source .dialog-demo-2 .o-input,
.container .source .dialog-demo-2 .o-select {
  width: 80%;
}

.container .source .dialog-demo-2 .o-select .o-input,
.container .source .dialog-demo-2 .o-select .o-input__inner,
.container .source .dialog-demo-2 .o-select .o-select-dropdown__wrapper {
  width: 100%;
}

.container .source .dialog-demo-2 .o-select .o-select-dropdown__wrapper {
  min-width: 0;
}